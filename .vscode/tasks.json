{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++:build",
      "command": "g++",
      "args": [
        "-O0",
        "-std=c++17",
        "-g",
        "-fdiagnostics-color=always",
        "-mavx2",
        "-Wdeprecated-declarations",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++:asm",
      "command": "g++",
      "args": [
        "-O2",
        "-std=c++17",
        // "-g",
        // "-fdiagnostics-color=always",
        "-S",
        // "-fverbose-asm",
        "-mavx2",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.s"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "CUDA:build",
      "command": "nvcc",
      "args": [
        "-O0",
        "-std=c++11",
        "-lcublas", "-arch=compute_86", "-code=sm_86",
        "-g", // CPU debug
        // "-G", // GPU debug
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}